.poker{
  width: 100vw;
  height: 100vh;
}
.poker_top{
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.top_btn{
  /* width: 160rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center; */
}
.btn_item{
  width: 128rpx;
  height: 60rpx;
  margin: 10rpx 0;
  background-color:green;
  border:1rpx solid #dddddd;
  border-radius: 12rpx;
  box-sizing: border-box;
  font-size:24rpx;
  color:#333;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.top_right{
  /* width: calc(100% - 160rpx); */
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.right_item{
  width: calc(100%/8 - 20rpx);
  height: 100rpx;
  margin: 0 10rpx;
  border:1rpx solid #dddddd;
  box-sizing: border-box;
}
.poker_center{
  width: 100%;
  height: calc(100% - 600rpx);
  background-color: blue;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
}
.center_item{
  width: calc(100%/10 - 6rpx);
  height: auto;
  min-height: 100rpx;
  margin: 0 6rpx;
  box-sizing: border-box;
  background-color:red;
}
.poker_btn{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.poker_box{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #dddddd;
}
.poker_list{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  width: 100rpx;
  height: 100rpx;
  background-color: red;
}
.poker_ad{
  width: 100%;
  height: 280rpx;
}